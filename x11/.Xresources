! =======
!  URXVT
! =======
/*{{{*/
URxvt*background:   [90]#000000

URxvt*font: xft:DejaVu Sans Mono: size=12
!URxvt*font: xft:FiraCode Nerd Font Mono: size=11
URxvt*antialias: true
URxvt*autohint: true

URxvt*depth: 32
URxvt*geometry: 400x400
URxvt*letterspace: -1

URxvt*transparent: false
URxvt*borderLess: false
URxvt*externalBorder: 0
URxvt*internalBorder: 5
URxvt*scrollBar: false
URxvt*saveLines: 5000
URxvt*iso14755: false
URxvt.iso14755_52: false

Xft.rgba: none 
Xft.hintstyle: hintfull 

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

URxvt.perl-ext-common: default,matcher,resize-font

!Clickable URLs
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

! Change font size on the fly
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show
/*}}}*/

! =======
!  XTerm
! =======
/*{{{*/

!Terminal name
XTerm.termName: xterm-256color

!Font and theme config
!XTerm.vt100.font: xft:DejaVu Sans Mono: size=13
XTerm.vt100.font: xft:DejaVu Sans Nerd Font Propo: size=13
Xterm.vt100.letterspace: 1
XTerm.vt100.foreground:       #8ef992
XTerm.vt100.background:       #000000
XTerm.vt100.cursorColor:      #ef8802

!Fix Alt key
XTerm.vt100.metaSendsEscape: true

!Fix backspace key
XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?

!Line limit
XTerm.vt100.saveLines: 4096

/*}}}*/

